.boxs{
  border-radius:0.5em;
  margin : 40px 20px 10px 20px;
  background-color:#f9f9f9;
  box-shadow: 0 10px 35px #dee1e8;
}

.home_top {
	position: relative;
	width: 100%;
	overflow:visible;
	text-align: center;
	
}

.home_top:after {
	width: 100%;
	height: 100%;
  overflow:auto;
	position: absolute;
	left: 0;
	top: 0;
	z-index: -1;
	content: '';

	background: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%);
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

