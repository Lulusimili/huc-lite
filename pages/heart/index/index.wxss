}

.home_top {
	position: fixed;
	width: 100%;
  overflow:visible;
	text-align: center;
	line-height: 50px;
  top:0;
}
.home_top:after {
	width: 100%;
	height: 100%;
  overflow:auto;
	position: absolute;
	left: 0;
	top: 0;
	z-index: -1;
	content: '';
	border-radius: 0 0 50% 50%;
	background: linear-gradient(to top, #ffc3a0 0%, #ffafbd 100%);
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

